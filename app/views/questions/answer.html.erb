<%= content_for(:title) { "Podmedics | Answer" } %>

<div class="inner">
  <div class="page">
    <div class="lecture_questions_left_column">
      <div class="lecture_questions_outer_wrapper">
        <div class="lectures_question_title">
          <div class="lectures_question_title_outer_spacing">
            <%= @quiz.current_question.stem.html_safe %>
          </div>
        </div>
        <div class="lecture_question_blocks">
          <div class="inner_page_padding">

            <% if @quiz.answered_correct?(params[:answer_given].to_i) %>
              <div class="default_lecture_question correct_lecture_answer">
                <p class="lecture_questions_list_left_column"><%= @quiz.correct_answer %></p>
                <p class="lecture_question_status_icon">Correct</p>
              </div>
            <% else %>
              <%= render 'wrong_answer' %>
            <% end %>

            <div class="correct_lecture_answer_info" style="display: block">
              <p><%= simple_format(@quiz.current_question.explanation) %></p>
              <% if @quiz.active? %>
                <p><%= link_to "Next Question", question_path(@quiz.next_question), 
                :class => "red_button medium next_question_button" %>
                  <% if @flashcards.count > 0 %>
                    <a href="javascript:;" class="podmedcis_button green flash_cards_button question_result_button">Flashcards</a></p>
                  <% end %>
              <% else %>
                <p><%= link_to "Result", questions_result_url, :class => "red_button medium question_result_button" %></p>
              <% end %>
            </div>
            <div class="report_answer_link">
              Please <a href="mailto:contact@podmedics.com">email us</a> if you believe this answer is incorrect, quoting the question identifier of <strong><%= @quiz.current_question.id %></strong>.
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="lecture_questions_right_column">
      <%= render 'question_stats' %>
    </div>

  </div>
</div>

<% if @flashcards.count > 0 %>
    <div class="flashcard_background"></div>
    <div class="flashcard_wrapper">
      <div class="close_flashcard_wrapper">
        <div class="close_flashcard"></div>
      </div>

      <div class="cd-tabs">
        <nav>
          <ul class="cd-tabs-navigation">
            <% @flashcards.each_with_index do |flashcard, index| %>
                <li><a data-content="tab_<%= index %>" class="<%= 'selected' if index == 0 %>" href="#<%= index %>"><%= flashcard.title %></a></li>
            <% end %>
          </ul>
        </nav>

        <ul class="cd-tabs-content">
          <% @flashcards.each_with_index do |flashcard, index| %>
              <li data-content="tab_<%= index %>" class="<%= 'selected' if index == 0 %>">
                <div class="inner_flashcard_wrapper">
                  <div class="flashcard_name">
                    <%= flashcard.title %>
                  </div>
                  <div class="flashcard_user_created_name">
                    Created by <%= link_to flashcard.user.name, user_path(flashcard.user) %>
                  </div>

                  <div class="flashcard_divider"></div>

                  <div class="flashcard_title">General</div>

                  <div class="flashcard_title sub">Epidemiology</div>
                  <div class="flashcard_copy">
                    <%= flashcard.epidemiology.html_safe %>
                  </div>

                  <div class="flashcard_title sub">Pathology</div>
                  <div class="flashcard_copy">
                    <%= flashcard.pathology.html_safe %>
                  </div>

                  <div class="flashcard_title sub">Top three causes</div>
                  <div class="flashcard_copy">
                    <%= flashcard.causes.html_safe %>
                  </div>

                  <div class="flashcard_divider"></div>

                  <div class="flashcard_title">Clinical Features</div>

                  <div class="flashcard_title sub">Symptoms</div>
                  <div class="flashcard_copy">
                    <%= flashcard.symptoms.html_safe %>
                  </div>

                  <div class="flashcard_title sub">Signs</div>
                  <div class="flashcard_copy">
                    <%= flashcard.signs.html_safe %>
                  </div>

                  <div class="flashcard_divider"></div>

                  <div class="flashcard_title">Investigations</div>
                  <div class="flashcard_table_wrapper">
                    <table>
                      <tr>
                        <td class="flashcard_table_left_column">Cultures</td>
                        <td><%= flashcard.inv_cultures.html_safe %></td>
                      </tr>
                      <tr>
                        <td class="flashcard_table_left_column">Bloods</td>
                        <td><%= flashcard.inv_bloods.html_safe %></td>
                      </tr>
                      <tr>
                        <td class="flashcard_table_left_column">Imaging</td>
                        <td><%= flashcard.inv_imaging.html_safe %></td>
                      </tr>
                      <tr>
                        <td class="flashcard_table_left_column">Scopic/Biopsy</td>
                        <td><%= flashcard.inv_scopic.html_safe %></td>
                      </tr>
                      <tr>
                        <td class="flashcard_table_left_column">Functional</td>
                        <td><%= flashcard.inv_functional.html_safe %></td>
                      </tr>
                    </table>

                  </div>
                  <div class="flashcard_divider"></div>

                  <div class="flashcard_title">Treatment</div>


                  <div class="flashcard_title sub">Conservative</div>
                  <div class="flashcard_copy">
                    <%= flashcard.treat_cons.html_safe %>
                  </div>

                  <div class="flashcard_title sub">Medical</div>
                  <div class="flashcard_copy">
                    <%= flashcard.treat_medical.html_safe %>
                  </div>

                  <div class="flashcard_title sub">Surgical</div>
                  <div class="flashcard_copy">
                    <%= flashcard.treat_surgical.html_safe %>
                  </div>

                </div>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>



<% if @user_progress.award_badge %>
  <%= render partial: 'shared/award_badge', locals: {user_progress: @user_progress} %>
<% end %>
