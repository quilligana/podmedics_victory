<%= content_for(:title) { "Podmedics | Notes" } %>

<div class="inner questions_answers_page">

  <div class="sub_heading_wrapper search_page_header">
    <h1><%= "Notes" %></h1>
    <div class="sub_heading_button_set notes_heading_button_set">
      <%= link_to 'Download Notes', url_for(:format => "pdf"), class: "podmedcis_button green print_notes_button" %>
      <%= render 'notes_nav' %>
    </div>
  </div>

  <div class="page">
    <% unless @notes.empty? %>
      <% @notes.each do |category| %>
        <div class="notes_category_heading_wrapper">
          <h2><%= link_to category.first.first.category.name, category_notes_path(category.first.first.category) %></h2>
        </div>

        <% category.each do |specialty| %>
          <div class="notes_specialty_heading_wrapper">
            <h3>
              <%= link_to specialty.first.specialty.name, specialty_notes_path(specialty.first.specialty) %>
            </h3>
          </div>
          <%= render partial: 'note', collection: specialty %>
        <% end %>

        <div class="break"></div>
      <% end %>
    <% else %>
      <div class="no_notes_found_notice">No notes found for this specialty</div>
    <% end %>
  </div>

  <div class="clear"></div>
  </div>
</div>
