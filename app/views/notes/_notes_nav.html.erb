<div class="sub_heading_button_set notes_dropdown_wrapper">
  <div class="lectures_inline_dropdown_wrapper">
    <a href="javascript:;" class="podmedcis_button lectures_dropdown_button">Categories</a>
    <div class="lectures_inline_dropdown">

      <div class="lectures_inline_dropdown_categories">
        <%= link_to "All Notes", notes_path, class: "lectures_inline_dropdown_category_link all_notes_link_no_icon" %>
        <% @categories.each do |category| %>
          <a href="javascript:;" class="lectures_inline_dropdown_category_link <%= to_underscored(category.name) %>" data-category="<%= to_underscored(category.name) %>"><%= category.name %></a>
        <% end %>
      </div>

      <% @categories.each do |category| %>
        <div class="lectures_inline_dropdown_specialty_<%= to_underscored(category.name) %>">
          <div class="main_nav_inner_lectures_title_wrapper">
            <div class="lectures_inline_dropdown_back_button">Back</div>
          </div>
          <%= link_to "All #{category.name} Notes", category_notes_path(category) %>
          <% category.specialties.order(:name).each do |specialty| %>
            <%= link_to specialty.name, specialty_notes_path(specialty) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>