<% if @saved %>
	
	$("#notes_saved_message").html("Notes saved")
	
	$("#notes_saved_message").show(100);
	
	setTimeout(function()
	{
		$("#notes_saved_message").hide(100);
	}, 3000);

<% else %>

	$("#notes_saved_message").html("Notes failed to save.<br>Fields cannot be blank.")
	
	$("#notes_saved_message").show(100);
	setTimeout(function()
	{
		$("#notes_saved_message").hide(100);
	}, 3000);

<% end %>