<div class="video_page_header">

  <div class="inner video_page">
    <div class="video_page_heading_wrapper">
      <h1><%= @video.title %></h1>
      <p class="video_breadcrumb">
        <%= link_to @video.specialty_name, specialty_path(@video.specialty) %>
        / 
        <%= link_to @video.title, video_path(@video) %>
      </p>
    </div>

    <div class="video_page_heading_button_set">
      <div class="video_download_dropdown">
        <a href="#" class="podmedcis_button white_download_button">Download</a>
        <div class="video_download_dropdown_inner">
          <a href="#" class="video_download_dropdown_link video_file_icon">Video File</a>
          <a href="#" class="video_download_dropdown_link audio_file_icon">Audio File</a>
          <a href="#" class="video_download_dropdown_link slides_file_icon">Slides</a>
        </div>
      </div>

      <% if questions_exist %>
        <%= link_to video_questions_url(:video_id => @video.id), class: "podmedcis_button take_exam_button" do %>
          <span>Answer</span> Questions
        <% end %>
      <% end %>
    </div>
  </div>
</div><!-- End of video header -->


<div class="inner_divide_video_wrapper">
  <div class="inner video_page">
    <div class="video_header_outer">

      <div class="video_page_author_duration_header">
        <p class="video_author_duration_subtitle"><%= @video.duration %> minutes with <%= @video.speaker_name %></p>
        <p><%= @video.description %></p>
      </div>

      <div class="video_header_inner">

        <div class="video_column">

          <div class="vendor">
            <iframe src="//player.vimeo.com/video/<%= @video.vimeo_identifier %>?portrait=0&color=fa3f52" width="400" height="225" frameborder="0"></iframe>
          </div>

        </div>

        <div class="video_page_notes_column">
          <div class="video_page_notes_column_title">
            <strong>Notes</strong>
            <p>Save personal notes for reference later</p>
          </div>

          <div class="video_page_notes_column_divide"></div>

          <form action="#">
            <input type="text" class="notes_column_text_field"  placeholder="Note Title"/>
            <textarea id="note_content" class="notes_column_text_area" placeholder="Write your notes here.." ></textarea>
            <div class="notes_private_textarea_notice">Notes are private & only visble to you</div>
            <div class="notes_column_save_button">
              <button type="submit" class="podmedcis_button">Save Note</button>
            </div>
          </form>

        </div>

      </div>

    </div>

  </div>

</div>  <!-- End of video & notes section -->

