
<div class="inner flashcard_create_page_inner">
  <div class="sub_heading_wrapper flashcard_create_heading">
    <h1>New Flashcard</h1>
  </div>
  <div class="sub_heading_right_flashcard_create_heading">
    <a href="javascript:;" class="podmedcis_button green flash_cards_button">Preview a flash card</a>
  </div>

  <div class="page flashcard_create">
    <div class="flashcard_create_header">As a member you can create flashcards for the community to use, you will receive 1 month free membership. Once you submit the flashcard, we will review it and then it appears on the video page</div>

    <div class="flashcard_create_left_column">
      <%= simple_form_for [@video, @flashcard] do |f| %>
        <%= f.error_notification %>
        <div class="flashcard_create_left_column_inner_spacing">
          <h2>General</h2>
          <%= f.input :epidemiology, as: :text, label: 'Definition and Basic Epidemiology', hint: 'This is a cool hint' %>
          <%= f.input :pathology, as: :text, label: 'Pathology', hint: 'This is a cool hint' %>
          <%= f.input :causes, as: :text, label: 'Top three causes', hint: 'This is a cool hint' %>
        </div>
        <div class="flashcard_create_left_column_inner_spacing">
        <h2>Clinical Features</h2>
          <%= f.input :symptoms, as: :text, label: 'Symptoms (general and specific)', hint: 'This is a cool hint' %>
          <%= f.input :signs, as: :text, label: 'Signs (general and specific)', hint: 'This is a cool hint' %>
        </div>
        <div class="flashcard_create_left_column_inner_spacing">
        <h2>Investigations</h2>
          <%= f.input :inv_cultures, as: :text, label: 'Investigations: Cultures', hint: 'This is a cool hint' %>
          <%= f.input :inv_bloods, as: :text, label: 'Investigations: Bloods', hint: 'This is a cool hint' %>
          <%= f.input :inv_imaging, as: :text, label: 'Investigations: Imaging', hint: 'This is a cool hint' %>
          <%= f.input :inv_scopic, as: :text, label: 'Investigations: Scopic/Biopsy', hint: 'This is a cool hint' %>
          <%= f.input :inv_functional, as: :text, label: 'Investigations: Functional', hint: 'This is a cool hint' %>
        </div>
        <div class="flashcard_create_left_column_inner_spacing">
        <h2>Treatment</h2>
          <%= f.input :treat_cons, as: :text, label: 'Conservative', hint: 'This is a cool hint' %>
          <%= f.input :treat_medical, as: :text, label: 'Medical', hint: 'This is a cool hint' %>
          <%= f.input :treat_surgical, as: :text, label: 'Surgical', hint: 'This is a cool hint' %>
          <button class="podmedcis_button green" type="submit">Create Flash Card</button>
        </div>
      <% end %>
    </div>

  </div>

</div>



