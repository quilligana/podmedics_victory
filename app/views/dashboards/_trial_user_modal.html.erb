<div id="welcome_trial_user_modal" class="reveal-modal trial_user_modal_resize animated fadeInUp">
  <div class="trial_user_modal_wrapper">

    <div class="trial_user_modal_podmedics_icon"></div>

    <div class="trial_user_info_wrapper_modal">
      <p>Welcome to Podmedics - now free for everyone!</p>
      <p>Please take some time to explore all our videos, questions and flashcards for each of the different specialties</p>
      <p>As you watch videos and do questions you will earn points and badges, and climb the Podmedics leaderboards for each specialty</p>
    </div>

    <a href="javascript:;" class="podmedcis_button" id="choose_trial_lectures_button">Let's go!</a>
  </div>
</div>

<% if current_user.login_count == 1 %>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
        $('#welcome_trial_user_modal').reveal({
          animation: 'fadeAndPop',
          closeonbackgroundclick: true,
          dismissmodalclass: 'podmedcis_button'
        });
    });
  </script>
<% end %>
