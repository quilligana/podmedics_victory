
<div class="dashboard_count_blocks">
  <div class="dashboard_count_block overall_count_red">
    <p class="number"><%= current_user.points %></p>
    <p>Points Earned so far</p>
  </div>

  <div class="dashboard_count_block pass_count_green">
    <%= exams_passed %>
    <p>Exams Passed</p>
  </div>

  <div class="dashboard_count_block">
    <%= lectures_watched %>
    <p>Lectures Watched</p>
  </div>

  <div class="dashboard_count_block">
    <p class="number"><%= current_user.user_questions.count %></p>
    <p>Questions Answered</p>
  </div>

  <div class="dashboard_count_block">
    <p class="number"><%= current_user.notes.count %></p>
    <p>Notes Saved</p>
  </div>

  <div class="dashboard_count_block">
    <p class="number"> <%= current_user.badges.count %> </p>
    <p>Badges Earned</p>
  </div>
</div>
<% if current_user.badges.any? %>
  <div class="dashboard_badges_overview_wrapper">

    <div class="dashboard_badges_left_column">
      <%= render 'recent_badges' %>
    </div>

    <div class="dashboard_badges_right_column">
      <div class="dashboard_badges_overview_inner_border">
        <div class="title">Recent Community Questions</div>
        <div class="questions_answers_dashboard_list">
          <% @recent_questions.each do |question| %>
            <div class="questions_answers_dashboard_block">
              <div class="questions_answers_dashboard_block_inner_wrapper">
                <div class="questions_answers_dashboard_block_title"><%= question.content %></div>
                <p class="questions_answers_dashboard_block_name_date"><a href="#"><%= question.user %></a> asked a question <%= time_ago_in_words(question.created_at) %> ago</p>
                <%= link_to "View", specialty_question_path(question.specialty, question), class: 'podmedcis_button red_button' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
<% end %>
