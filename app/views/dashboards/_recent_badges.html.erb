<div class="title">Recent Badges</div>
  <% @badges.take(3).each do |badge| %>
    <div class="dashboard_badges_badge_wrapper">
      <%= content_tag(:p, "<strong>#{time_ago_in_words(badge.created_at)}</strong> ago you were awarded".html_safe, class: "badge_earned_date") %>
      <%= show_badge(badge) %>
    </div>
<% end %>
