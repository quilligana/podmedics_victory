<div class="row header">
  <h3>Sale</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-wrapper">
      <table border="0" class="table table-hover">
        <tr>
          <th>Key</th>
          <th>Value</th>
        </tr>
        <% @sale.attributes.sort.each do |key, value| %>
          <tr>
            <td><%= key %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<%= link_to "Stripe", "https://manage.stripe.com/payments/#{@sale.stripe_id}", class: 'btn-flat success', target: '_blank' %>
<%= link_to 'Back', admin_sales_path, class: 'btn-flat' %>

