<div class="row header">
  <h3>Sale</h3>
  <div class="col-md-10 col-sm-10 col-xs-10 pull-right">
    <%= link_to 'Back', admin_sales_path, class: 'btn-flat pull-right' %>
    <%= link_to "View on Stripe", "https://manage.stripe.com/payments/#{@sale.stripe_id}", class: 'btn-flat success pull-right', target: '_blank' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-wrapper">
      <table border="0" class="table table-hover">
        <tr>
          <th>Key</th>
          <th>Value</th>
        </tr>
        <% @sale.attributes.sort.each do |key, value| %>
          <tr>
            <td><%= key %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Paper Trail</h3>
    <div class="table-wrapper">
      <table border="0" class="table table-hover">
        <thead>
          <tr>
            <th>Timestamp</th>
            <th>Event</th>
            <th>Changes</th>
          </tr>
        </thead>
        <tbody>
          <% @sale.versions.each do |version| %>
            <tr>
              <td><%= version.created_at %></td>
              <td><%= version.event %></td>
              <td>
                <% version.changeset.sort.each do |key, value| %>
                  <b><%= key %></b>: <%= value[0] %> to <%= value[1] %><br>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


