<div class="question">
  <p><%= simple_format(question.stem) %></p>
  <ol>
    <li><%= question.answer_1 %></li>
    <li><%= question.answer_2 %></li>
    <li><%= question.answer_3 %></li>
    <li><%= question.answer_4 %></li>
    <li><%= question.answer_5 %></li>
  </ol>
  <p class="bg-warning">Correct answer: <%= question.correct_answer %></p>
  <p><%= simple_format(question.explanation) %></p>
  <%= link_to 'Edit', edit_admin_video_question_path(@video, question) %>
  <%= link_to "Remove", admin_video_question_path(@video, question), method: :delete, data: {confirm: 'Are you sure?'} %>
  <hr />
</div>
