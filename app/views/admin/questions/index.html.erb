<div class="row header">
  <h3>Questions</h3>
</div>

<h5>Total Questions: <%= Question.count %></h5>

<%= will_paginate @questions %>

<div class="row">
  <div class="col-md-12">
    <div class="table-wrapper">
      <table class="table table-hover table-striped" border="0">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Stem</th>
            <%= content_tag :th, sort_link(@q, :proofread) %>
            <th>Video</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @questions.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= q.stem.truncate(30) %></td>
              <td><%= q.proofread %></td>
              <td><%= link_to q.video.title, admin_video_path(q.video) %></td>
              <td>
                <ul class="actions">
                  <li>
                    <%= link_to "Edit", edit_admin_video_question_path(q.video, q) %>
                  </li>
                </ul>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= will_paginate @questions %>
