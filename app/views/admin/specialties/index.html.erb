<div class="row header">
  <h3>Specialties</h3>
  <div class="col-md-10 col-sm-10 col-xs-10 pull-right">
    <%= link_to "New Specialty", new_admin_specialty_path, class: 'btn-flat success pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="specialties table-wrapper">
      <table class="table table-hover" border="0">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Videos</th>
            <th>Questions (target)</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @specialties %>
        </tbody>
      </table>
    </div>
  </div>
</div>

