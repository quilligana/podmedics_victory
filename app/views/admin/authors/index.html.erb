<div class="row header">
  <h3>Authors</h3>
  <div class="col-md-10 pull-right">
    <%= link_to "New Author", new_admin_author_path, class: 'btn-flat success pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="authors table-wrapper">
      <table class="table table-hover" border="0">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @authors %>
        </tbody>
      </table>
    </div>
  </div>
</div>
