<div class="page-header">
  <h1>Videos</h1>
</div>

<%= link_to "New video", new_admin_video_path, class: 'btn btn-success' %>

<h2>Import Videos</h2>
<%= form_tag import_admin_videos_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<h2>Import Questions</h2>
<%= form_tag import_admin_questions_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>#ID</th>
      <th>Title</th>
      <th>Specialty</th>
      <th>Preview</th>
      <th>Questions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render @videos %>
  </tbody>
</table>
