<div class="row header">
  <h3>Videos</h3>
  <div class="col-md-10 col-sm-10 col-xs-10 pull-right">
    <%= link_to "New video", new_admin_video_path, class: 'btn-flat success pull-right' %>
  </div>
</div>

<%= will_paginate @videos %>

<div class="row">
  <div class="col-md-12">
    <div class="table-wrapper">
      <table class='table table-hover' border="0">
        <thead>
          <tr>
            <th>#ID</th>
            <th>Title</th>
            <th>Specialty</th>
            <th>Questions</th>
            <th>Comments</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @videos %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= will_paginate @videos %>
