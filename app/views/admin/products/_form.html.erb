<div class="row form-wrapper">
  <div class="col-md-6">
    <%= simple_form_for [:admin, @product] do |f| %>
      <%= f.input :name %>
      <%= f.input :permalink %>
      <%= f.input :description %>
      <%= f.input :price, hint: 'Price in pence'%>
      <%= f.input :duration, hint: 'Duration of product sub in months' %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
