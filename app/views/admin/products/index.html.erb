<div class="row header">
  <h3>Products</h3>
  <div class="col-md-10 pull-right">
    <%= link_to "New Product", new_admin_product_path, class: 'btn-flat success pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-wrapper">
      <table class="table table-hover">
        <tr>
          <th>Name</th>
          <th>Permalink</th>
          <th>Description</th>
          <th>Price</th>
          <th>Duration</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% for product in @products %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.permalink %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.duration %></td>
            <td><%= link_to "Show", admin_product_path(product) %></td>
            <td><%= link_to "Edit", edit_admin_product_path(product) %></td>
            <td><%= link_to "Destroy", admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

