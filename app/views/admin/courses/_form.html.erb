<%= simple_form_for [:admin, @course] do |f| %>
  <%= f.error_notification %>
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :title %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :price %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :date, as: :string %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :event_link %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :description, input_html: { cols: 50, rows: 10} %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
    
<% end %>
