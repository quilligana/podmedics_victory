<div class="row header">
  <h1>Admin Dashboard</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>New User Signups</h3>
    <p>by week</p>
    <%= line_chart User.group_by_week(:created_at, range: 6.months.ago..Time.now).count, colors: ["pink", "#999"] %>
  </div>

  <div class="col-md-6">
    <h3>Sales</h3>
    <p>by week</p>
    <%= line_chart Sale.group_by_week(:created_at, range: 6.months.ago..Time.now).count, colors: ["red", "#999"] %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Badge Awards</h3>
    <p>by day</p>
    <%= line_chart Badge.group_by_day(:created_at, range: 6.months.ago..Time.now).count %>
  </div>

  <div class="col-md-6">
    <h3>Question Engagement</h3>
    <p>by day</p>
    <%= line_chart  UserQuestion.group_by_day(:created_at, range: 3.months.ago..Time.now).count%>
  </div>
</div>

