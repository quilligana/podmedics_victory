<%= form_for @comment, remote: true, :authenticity_token => true do |f| %>
  <p>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.hidden_field :commentable_id, value: @video.id %>
  </p>
  <p>
    <%= f.hidden_field :commentable_type, value: @video.class.name %>
  </p>
  <p><%= f.submit %></p>
<% end %>