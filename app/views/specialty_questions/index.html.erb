<div class="inner questions_answers_page">

<div class="sub_heading_wrapper">
  <h1><%= @specialty.name %></h1>
  <div class="sub_heading_button_set">
    <a href="#" class="podmedcis_button white_button ask_question_sub_heading_button"  data-reveal-id="ask_question_modal">Ask a Question</a>
    <div class="exam_button_tooltip_wrapper">
      <%= link_to "Take #{@specialty.name.capitalize} Exam", specialty_exam_url(@specialty.id), class: "podmedcis_button" %>
      <div class="exam_button_tooltip">Take The <%= @specialty.name %> Exam.<br> Answer all 24 questions<br> (average test time approx 20mins)</div>
    </div>
  </div>
</div>

<div class="page">
  <div class="speciality_left_column">
    <div class="lectures_speciality_outer_wrapper">
      <div id="tabs_single_page">
        <%= render 'specialties/tab_links' %>

        <div id="tabs_container">

          <div id="tabs-2" class="tab_box">
            <div class="questions_answers_list">
              <%= render partial: 'question', collection: @specialty.user_questions %>
              <!-- End questions list -->

              <div class="load_more_questions_answers_wrapper"> <a href="#" class="podmedcis_button grey">Load More Questions</a>

              </div>
              <!-- End questions wrapper -->

            </div>
            <!-- End questions tab -->




          </div>
          <!-- End tab 2 -->
        </div>
        <!-- End tab container -->
      </div>
      <!-- End tabs -->
    </div>
    <!-- End speciality wrapper -->
  </div>
  <!-- End speciality left column -->

  <%= render 'specialties/specialty_stats' %>

  <!-- End right column -->

  <div class="clear"></div>
</div>
<!-- End page -->


</div>
<!-- End inner wrapper-->



<div id="ask_question_modal" class="reveal-modal ask_question_modal_resize">
  <div class="ask_question_modal_wrapper">

    <div class="ask_question_modal_title">Ask a Question</div>
    <div class="ask_question_modal_sub_title">Need some advice, ask the community a question and get help..</div>

    <div class="ask_question_modal_form">
      <form action="#">
        <textarea name="" cols="" rows="" class="ask_question_modal_textarea" placeholder="Write your question here..."></textarea>
        <button class="podmedcis_button green">Post Answer</button>
      </form>
    </div>

  </div>
</div>

<!-- End ask question modal-->
