<div class="inner login_page_inner">

  <div class="sub_heading_wrapper">
    <h1>Log In</h1>
  </div>

  <div class="page">
    <div class="left_column_forms">
      <div class="social_signup_wrapper">
        <div class="social_signup_button_wrapper">
          <a href="/auth/twitter" class="twitter_social_button">Log In  via <strong>Twitter</strong></a>
          <p>Or</p>
          <a href="/auth/facebook" class="fb_social_button" id="facebook_sign_in">Log In  via <strong>Facebook</strong></a>
        </div>
      </div>
      <div class="login_ignup_form_wrapper" id="members_login_form">
        <h2>Members Log in</h2>
        <p class="reset_password_notice">PLEASE NOTE: If you have an account from our old site you will need to <%= link_to 'reset your password', 'javascript:;', id: 'forgot_password_link_notice' %> to complete migration of your account.</p>
        <%= form_tag sessions_url, id: "login_form" do %>
          <%= email_field_tag :email, nil, class: "podmedics_textfield", placeholder: 'Email', autofocus: true %>
          <%= password_field_tag :password, nil, class: "podmedics_textfield", placeholder: 'Password' %>
          <%= button_tag 'Login', class: "red_button" %>
        <% end %>
        <div class="password_reset_link"><a href="javascript:;" id="forgot_password_link">Forgot your password?</a></div>
        <div class="sign_up_link">
          New member? <%= link_to "Sign Up Now", signup_path %>
        </div>
      </div>
      <div class="login_ignup_form_wrapper" id="members_reset_password_form">
        <h2>Password Reset</h2>
        <%= form_tag password_resets_path, method: :post do %>
          <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'podmedics_textfield', id: "password_reset_field" %>
          <%= button_tag "Reset Password", class: 'red_button' %>
        <% end %>
        <div class="password_reset_link"><a href="javascript:;" id="forgot_password_back_link">Back</a></div>
      </div>
    </div>
  </div>

</div>

<%= content_for :footer do %>
  <div class="inline_footer_wrapper login_page_footer">
    <%= render 'footer' %>
  </div>
<% end %>

