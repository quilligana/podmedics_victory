<div class="home_section_questions" id="questions">
  <div class="home_section_inner_wrapper">
    <div class="home_top_section_left_column">
      <h2>Do Questions</h2>
      <p>Our videos are matched by great questions and explanations that let you test yourself on individual videos/topics or by the specialty you are revising.</p>
    </div>
    <div class="home_top_section_right_column questions_right_column_wrapper right_column">
      <div class="index_questions_wrapper">
      <div class="try_questions_sketch"></div>
          <div ng-app='TrialQuestionsApp'>
            <div ng-controller='TrialQuestionsController as vm'>
              <div class="question" ng-show="vm.firstQuestionAvailable">
                <div class="index_questions_header">
                  <div ng-bind-html="vm.currentQuestion.stem" class="questions_header_padding"></div>
                </div>

                <div class="index_questions_block">

                  <ul ng-class="{ 'showAnswer' : vm.showAnswer }">
                    <li ng-repeat="answer in vm.currentQuestion.answers" ng-class="{ 'correct' : vm.isCorrect(answer), 'incorrect' : answer.selectedAndIncorrect, 'notSelectedAndIncorrect' : answer.notSelectedAndIncorrect }">
                      <a ng-click="vm.selectedAnswer(answer)">{{answer.text}}</a>
                    </li>
                  </ul>

                  <div class="answer" ng-show="vm.showAnswer">
                    <div ng-bind-html="vm.currentQuestion.explanation"></div>
                    <div class="index_question_next_button">
                      <a ng-click="vm.nextQuestion()" class="red_button">Next Question</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="end_questions" ng-show="vm.questionsEnded">
                <h3>You have finished all the trial questions.</h3>
                <p><%= link_to "Sign Up to access more", signup_path , class: "signup_button" %></p>
                <a ng-click="vm.startAgain()" class="red_button">Start again</a>
              </div>

            </div>
          </div>
      </div>
    </div>
  </div>
</div>

