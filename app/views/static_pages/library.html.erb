<div class="inner">
  <div class="sub_heading_wrapper">
    <h1>Library</h1>
  </div>
  <div class="page">
    <div class="inner_page_padding">
      <p class="lecture_questions_sub_title">Just click on the blue links below to preview our podcasts</p>

      <% @categories.each do |category| %>
        <a href="javascript:;" class="library_button" id="library_<%= category.name.downcase  %>_link">
          <h2><%= category.name %></h2>
          <p class="inline_arrow_icon"></p>
          <p class="library_count"><%= pluralize(category.video_count, 'Lecture') %></p>
        </a>

        <div class="library_tab" id="<%= category.name %>_tab">
          <% category.specialties.each do |specialty| %>
            <div class="library_column">
              <p><%= specialty.name.upcase %></p>
              <% specialty.videos.each do |video| %>
                <% if video.preview %>
                  <p class="active_library_link"><%= link_to video.title, '#', class: 'fresco' %></p>
                <% else %>
                  <p><%= video.title %></p>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
