<div class="inner profile_page_inner">

  <% if allow? "users", "edit", @user %>
    <div class="sub_heading_wrapper">
      <div class="sub_heading_button_set">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "podmedcis_button red" %>
        <a href="#" class="podmedcis_button green"  data-reveal-id="welcome_trial_user_modal">Trial Member Modal</a>
      </div>
    </div>
  <% end %>


  <div id="welcome_trial_user_modal" class="reveal-modal trial_user_modal_resize animated fadeInUp">
    <div class="trial_user_modal_wrapper">

      <div class="trial_user_modal_podmedics_icon"></div>

      <div class="trial_user_info_wrapper_modal">
        <p>As a trial member you get to choose 2 Specialities to get you started, Nunc vitae lectuent per conubia nostra, per inceptos himenaeos. Nunc pulvinar venenatis sapien at accumsan. Praesent imperdiet tristique tristique.</p>
      </div>

      <a href="javascript:;" class="podmedcis_button" id="choose_trial_lectures_button">Get Started</a>
    </div>

    <div class="trial_user_select_specialities">
      <div class="choose_specialities_modal_title">Please choose your two selected specialities</div>
      <form action="#">
        <div class="choose_specialities_list">
          <p class="trial_member_option_wrapper">
            <label class="podmedcis_button grey" for="medicine_trial_member_choice">Medicine</label>
            <input type="checkbox" name="medicine_trial_member_choice" id="medicine_trial_member_choice" value="1">
          </p>

          <p class="trial_member_option_wrapper">
            <label class="podmedcis_button grey" for="surgery_trial_member_choice">Surgery</label>
            <input type="checkbox" name="surgery_trial_member_choice" id="surgery_trial_member_choice" value="1">
          </p>

          <p class="trial_member_option_wrapper">
            <label class="podmedcis_button grey" for="clinical_specialties_trial_member_choice">Clinical Specialties</label>
            <input type="checkbox" name="clinical_specialties_trial_member_choice" id="clinical_specialties_trial_member_choice" value="1">
          </p>

          <p class="trial_member_option_wrapper">
            <label class="podmedcis_button grey" for="clinical_sciences_trial_member_choice">Clinical Sciences</label>
            <input type="checkbox" name="clinical_sciences_trial_member_choice" id="clinical_sciences_trial_member_choice" value="1">
          </p>
        </div>

        <div class="choose_specialities_list_continue_button">
          <button type="submit" class="podmedcis_button choose_specialities_continue_button">Continue</button>
        </div>
      </form>

    </div>

  </div>








  <div class="page">

    <div class="profile_header">
      <div class="profile_avatar"><%= image_tag @user.get_avatar(:thumb) %></div>
      <h1><%= @user.name %></h1>
    </div>
    <!-- End of profile header -->


    <div class="profile_body">
      <div class="profile_inner profile_counts">

        <div class="profile_count_wrapper">

          <div class="profile_count points">
            <p class="number"><%= @user.points %></p>
            <p>Points in total</p>
          </div>

          <div class="profile_count exams">
            <%= exams_passed %>
            <p>Exams Passed</p>
          </div>

          <div class="profile_count badges">
            <p class="number"><%= @user.badges.count %></p>
            <p>Badges Earned</p>
          </div>

        </div>

      </div>
      <!-- End of profile counts -->

      <% if current_user.badges.any? %>
        <div class="profile_inner profile_badges">
          <div class="inner_page_padding">
            <%= render 'shared/badges' %>
          </div>

        </div>
      <% end %>
      <!-- End of profile badges -->


      <div class="profile_inner social_links_profile">
        <div class="inner_page_padding">
          <%= render 'social_buttons' %>
        </div>
      </div>


    </div>

    <!-- End of profile body -->

  </div>
  <!-- End of page -->


</div>
<!-- End of profile page wrapper -->



<%= content_for :footer do %>
  <div class="inline_footer_wrapper login_page_footer">
    <%= render 'footer' %>
  </div>
<% end %>
